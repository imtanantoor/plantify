model Invoice {
    id Int @id @default(autoincrement())
    discount Float
    tax Float
    invoiceDate DateTime @default(now())
    updatedAt DateTime @updatedAt
    status InvoiceStatus
    totalAmount Float
    orderId Int @unique
    order Order @relation(fields: [orderId], references: [id])
}

enum InvoiceStatus {
    PAID
    UNPAID
}
